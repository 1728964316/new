#include<stdio.h>
#include<stdlib.h>
#include<windows.h>
int main()
{
	int i = 0;
	int j = 0;
	int x = 0;
	int y = 5;
	int v_x = 1;
	int v_y = 1;
	int left = 0;
	int right = 50;
	int top = 0;
	int bottom = 30;

	while (1)
	{
		x = x + v_x;
		y = y + v_y;
		system("cls");
		for (i = 0; i < x; i++) {
			printf("\n");
		}
		for (j = 0; j < y; j++) {
			printf(" ");
		}
		printf("O");
		printf("\n");
		_sleep(10);

		if ((x == top || x == bottom)) {
			printf("\a");
			v_x = -v_x;
		}
		if ((y == left || y == right)) {
			printf("\a");
			v_y = -v_y;
		}
	}
	return 0;

}
